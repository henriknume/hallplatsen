<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="ex.nme.hallplatsen.createcard.CreateActivity"
    tools:showIn="@layout/activity_create">

    <EditText
        android:id="@+id/location_input_from"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toRightOf="@+id/from_label"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/location_input_to"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toRightOf="@+id/to_label"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/location_input_from" />

    <TextView
        android:id="@+id/from_label"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="@string/from_label"
        android:textSize="@dimen/create_label_font_size"
        app:layout_constraintBaseline_toBaselineOf="@+id/location_input_from"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/to_label"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="@string/to_label"
        android:textSize="@dimen/create_label_font_size"
        app:layout_constraintBaseline_toBaselineOf="@+id/location_input_to"
        app:layout_constraintLeft_toLeftOf="parent" />
</android.support.constraint.ConstraintLayout>