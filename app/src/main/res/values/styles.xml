<resources>

    <!-- Base application theme. -->
    <style name="HallplatsenAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>

    </style>

    <style name="HallplatsenAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="HallplatsenToolbarTheme">
        <!-- Used to for the title of the Toolbar -->
        <item name="android:textColorPrimary">@color/icons</item>
        <!-- Used to color the overflow menu icon -->
        <item name="android:textColorSecondary">@color/icons</item>
    </style>

</resources>
